{
  "name": "portal-core",
  "version": "2.2.0",
  "scripts": {
    "ng": "ng",
    "clean": "rimraf dist",
    "postinstall": "npm run build:schematics",
    "prebuild": "node .local-scripts/sync-dependencies.js",
    "build": "ng build @gematik/demis-portal-core-library",
    "build:dev": "npm run clean && npm run build && npm pack dist/gematik/demis-portal-core-library --pack-destination dist",
    "build:schematics": "npm run build --prefix schematics",
    "watch": "ng build @gematik/demis-portal-core-library --watch --configuration production",
    "start": "wait-on dist/gematik/demis-portal-core-library/public-api.d.ts && ng serve --port 4299",
    "dev": "npm run clean && npm-run-all --parallel watch start",
    "test-local": "ng test @gematik/demis-portal-core-library --karma-config karma.conf.js",
    "test": "ng test @gematik/demis-portal-core-library --karma-config karma.single-run.conf.js",
    "test:coverage": "ng test @gematik/demis-portal-core-library --karma-config karma.coverage.conf.js",
    "deploy-local-dev-package": "node .local-scripts/deploy-local-dev-package.js",
    "restore-to-registry-package": "node .local-scripts/restore-to-registry-package.js"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/core": "19.2.14",
    "@angular-devkit/schematics": "19.2.14",
    "@angular/animations": "19.2.14",
    "@angular/cdk": "19.2.19",
    "@angular/common": "19.2.14",
    "@angular/compiler": "19.2.14",
    "@angular/core": "19.2.14",
    "@angular/forms": "19.2.14",
    "@angular/material": "19.2.19",
    "@angular/material-date-fns-adapter": "19.2.19",
    "@angular/platform-browser": "19.2.14",
    "@angular/platform-browser-dynamic": "19.2.14",
    "@angular/router": "19.2.14",
    "@gematik/demis-portal-theme-library": "1.0.2",
    "@ngx-formly/core": "6.3.12",
    "@ngx-formly/material": "6.3.12",
    "marked": "16.1.2",
    "ngx-highlightjs": "14.0.1",
    "ngx-logger": "5.0.12",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.15",
    "@angular/cli": "19.2.15",
    "@angular/compiler-cli": "19.2.14",
    "@types/jasmine": "5.1.8",
    "@types/node": "18.19.110",
    "core-schematics": "file:schematics",
    "jasmine": "5.9.0",
    "jasmine-core": "5.9.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "karma-junit-reporter": "2.0.1",
    "karma-sonarqube-unit-reporter": "0.0.23",
    "ng-mocks": "14.13.5",
    "ng-packagr": "19.2.2",
    "npm-run-all": "4.1.5",
    "typescript": "5.8.3",
    "wait-on": "8.0.4"
  }
}
